{{#unless className}}
<div class="am-g">
  <div class="am-u-sm-$1$ am-u-md-$2$ am-u-lg-$3$">
    $内容$
  </div>
</div>
{{/unless}}
{{#if className}}
{{#ifCond className '==' 'container'}}
<div class="am-container">
  <div class="am-g">
    <div class="am-u-sm-$1$ am-u-md-$2$ am-u-lg-$3$">
      $内容$
    </div>
  </div>
</div>
{{else}}
{{#ifCond className '<=' '12'}}
<div class="am-g">
  <div class="am-u-sm-{{className}} am-u-md-{{className}} am-u-lg-{{className}}">
    $内容$
  </div>
</div>
{{else}}
<div class="am-g am-g-{{className}}">
  <div class="am-u-sm-$1$ am-u-md-$2$ am-u-lg-$3$">
    $内容$
  </div>
</div>
{{/ifCond}}
{{/ifCond}}
{{/if}}